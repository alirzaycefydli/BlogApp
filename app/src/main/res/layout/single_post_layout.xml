<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/single_user_image"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/u"
            android:layout_width="56dp"
            android:layout_height="56dp" />

        <TextView
            android:id="@+id/single_user_name"
            tools:text="user name"
            android:layout_toEndOf="@id/single_user_image"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/single_post_date"
            tools:text="00:00"
            android:layout_below="@id/single_user_name"
            android:layout_toEndOf="@id/single_user_image"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/single_post_image"
            android:src="@drawable/u"
            android:layout_below="@id/single_user_image"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
        <ImageButton
            android:id="@+id/single_like"
            android:layout_below="@id/single_post_image"
            android:src="@drawable/ic_like_grey"
            android:layout_marginTop="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/single_like_count"
            tools:text="1 peolpe liked"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/single_like"
            android:layout_below="@id/single_post_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/single_comment"
            android:layout_below="@id/single_post_image"
            android:src="@drawable/ic_comment"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/single_comment_count"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/single_comment_count"
            tools:text="1 peolpe liked"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_below="@id/single_post_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/single_post_descp"
            tools:text="description"
            android:layout_below="@id/single_like"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</android.support.v7.widget.CardView>